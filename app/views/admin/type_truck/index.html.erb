

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Tipo <small>Camiones</small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<!-- /.row -->
<% if flash[:notice] %>
  <%= render partial: 'shared/flashNoticeMessage' %>
<% end %>

<!-- /.row -->

<div class="row">
  <div class="col-md-3">
    <p>
      <%= link_to 'Nuevo tipo', new_admin_type_truck_path,:method=>'get', :class=>'btn  btn-primary' %>
    </p>
  </div>
      <div class="col-md-3 col-md-offset-6">
        <div class="form-group">
          <%= search_form_for @search, url: admin_type_truck_index_path, id:"searchForm" ,method: :post do |f| %>
              <div>
                <%= label_tag "isr",'Buscar:' %>
                <%= f.search_field  :name_cont, class: "form-control form-el" %>
              </div>
          <% end %>
        </div>
      </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @types.each do |type| %>
            <tr>


              <td>
                <%= type.name %>
              </td>
              <td>

                <%= link_to 'Agregar subtipos', admin_type_truck_sub_trucks_path(type.id), :class=>'btn btn-info' %>
                <%= link_to 'Agregar Referencias', admin_type_truck_referencias_path(type.id), :class=>'btn btn-info' %>


                <%= link_to 'Editar', edit_admin_type_truck_path(type.id), :class=>'btn btn-info' %>
                <%= link_to 'Eliminar', {:controller => 'admin/type_truck', :action => 'destroy', :id => type.id}, :data => {:confirm => 'Estas seguro de eliminar este elemento?'}, :method => 'DELETE',  :class=>'btn btn-danger' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class='row'>
      <div id='paginator'>
        <%= paginate @types %>
      </div>
    </div>
  </div>
</div>
<!-- /.row -->
