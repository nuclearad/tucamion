.form-group.col-md-12
  = f.label :typeuser, 'Tipo Usuario' 
  = f.select(:typeuser, Environment::TYPE[:clientes], {selected: @customer.typeuser}, { :class => 'form-control' })
.form-group.col-md-4
  = f.label "Documento De Identidad", class: "info-title"
  = f.text_field :cedula, class: "form-control unicase-form-control text-input", required: true, maxlength: 13, autofocus: true
.form-group.col-md-4
  = f.label "nombre_y_apellido".capitalize
  = f.text_field :name, class: "form-control unicase-form-control text-input", required: true, maxlength: 50
.form-group.col-md-4
  = f.label "correo", class: "info-title"
  = f.email_field :email, class: "form-control unicase-form-control text-input", required: true, maxlength: 50
.form-group.col-md-4
  = f.label :telefono, class: "info-title"
  = f.text_field :telefono, class: "form-control unicase-form-control text-input", required: true, maxlength: 11
- if @customer.id.blank?
  = f.hidden_field :terms, value: 1
  .form-group.col-md-4
    = f.label :clave, class: "info-title"
    = f.password_field :clave, class: "form-control unicase-form-control text-input", required: true, value: @customer.clave
  .form-group.col-md-4
    = f.label "Confirmar password", class: "info-title"
    = f.password_field :clave_confirmation, class: "form-control unicase-form-control text-input", required: true, value: @customer.clave
= f.simple_fields_for :quantities do |q|
  .form-group.col-md-4
    = q.label :total_trucks, "Cupos de camiones", {:style=>'color: green;'}
    = q.number_field :total_trucks, class: "form-control unicase-form-control text-input"
  .form-group.col-md-4
    = q.label :total_extras, "Cupos de respuestos", {:style=>'color: green;'}
    = q.number_field :total_extras, class: "form-control unicase-form-control text-input"
  .form-group.col-md-4
    = q.label :total_services, "Cupos de servicios", {:style=>'color: green;'}
    = q.number_field :total_services, class: "form-control unicase-form-control text-input"
  .form-group.col-md-4
    = q.label :current_trucks, "Cantidad consumida camiones", {:style=>'color: red;'}
    = q.number_field :current_trucks, class: "form-control unicase-form-control text-input"
  .form-group.col-md-4
    = q.label :current_extras, "Cantidad consumida respuestos", {:style=>'color: red;'}
    = q.number_field :current_extras, class: "form-control unicase-form-control text-input"
  .form-group.col-md-4
    = q.label :current_services, "Cantidad consumidas servicios", {:style=>'color: red;'}
    = q.number_field :current_services, class: "form-control unicase-form-control text-input"
.col-md-4.col-sm-12.cart-shopping-total.pull-right
  %table.table
    %thead
      %tr
        %td
          .cart-checkout-btn.pull-right
            = f.submit "Registrarse", class: "btn btn-primary"