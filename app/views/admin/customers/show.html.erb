<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Detalles de Perfil
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
        <table class="tabled-stripped tabled-bordered">
          <thead class="">
          <tr>
            <th>Nombre y Apellido</th>
            <th>Cedula</th>
          </tr>
          </thead>
          <tbody>
          <tr>
          <td>
            <%= @customer.name %>
          </td>
          <td>
            <%= @customer.cedula %>
          </td>
          </tr>
          </tbody>
        </table>
      </div>
    <br>
      <div class="row">
            <div>
              <%= link_to 'Listado', admin_customers_path, :class=>'btn btn-info' %>
              <%= link_to 'Editar', edit_admin_customer_path(@customer.id), :class=>'btn btn-info' %>
              <% if @customer.id == current_user.id %>
                <%= link_to 'Cambiar Clave', edit_admin_customer_path(@customer.id), :class=>'btn btn-warning' %>
              <% else %>
                  <%= link_to 'Reiniciar Clave', edit_admin_customer_path(@customer.id), :class=>'btn btn-warning' %>
              <% end %>
              <%= link_to 'Eliminar', {:controller => 'admin/customers', :action => 'destroy', :id => @customer.id}, :data => {:confirm => 'Estas seguro de eliminar este elemento?'}, :method => :delete,  :class=>'btn btn-danger' %>
            </div>
      </div>
  </div>
</div>


