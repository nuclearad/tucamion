<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Usuarios <small>/ Agregar</small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<!-- /.row -->
<%  if @customer.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(@customer.errors.count, "Errores") %> tratando de guardar:
      </div>
      <p>
      <ul>
        <% @customer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
      </p>
    </div>
<% end %>
<!-- /.row -->


<div class="row">
  <div class="col-md-12">



    <%= simple_form_for @customer, :url => admin_customers_path, :method=>'post' do |f|  %>
      
      <%= render partial: "form", locals: {f: f} %>

    <% end %>

  </div>
</div>












