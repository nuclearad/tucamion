.row
  .col-lg-12
    %h1.page-header
      Usuarios
      %small / Editar
    = render 'admin/includes/top'

/ /.row
- if @admin_user.errors.any?
  .panel.panel-danger
    .panel-heading
      = pluralize(@admin_user.errors.count, "Errores")
      tratando de guardar:
    %p
    %ul
      - @admin_user.errors.full_messages.each do |msg|
        %li= msg
/ /.row
.row
  .col-md-12
    = form_for @admin_user, url: admin_user_path, method: :patch do |f|

      .form-inputs

        .col-md-3
          = f.label 'Email'
          = f.email_field :email, class: 'form-control'
        .col-md-3
          = f.label 'Nombre'
          = f.text_field :first_name,class: 'form-control'
        .col-md-3
          = f.label 'Apellido'
          = f.text_field :last_name,class: 'form-control'
        .col-md-3
          = f.label 'Status'
          = f.number_field :status,class: 'form-control form-el'
      .row
        %br
        .form-actions.success
          = render partial: 'shared/botonera', locals:{ object: f, cancel_route: admin_users_path }