<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Planes <small>/ Agregar</small>
    </h1>
    <%= render 'admin/includes/top' %>
  </div>
</div>

<!-- /.row -->
<%  if @plan.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <%= pluralize(@truck.errors.count, "Errores") %> tratando de guardar:
      </div>
      <p>
      <ul>
        <% @plan.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
      </p>
    </div>
<% end %>
<!-- /.row -->


<div class="row">
  <div class="col-md-12">



    <%= form_for @plan, :url => admin_offer_path, :method=>'PATCH' do |f|  %>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :typeoffer, 'Tipo de Oferta' %>
              <%= f.select(:typeoffer, Environment::TYPE[:planes], {selected: @plan.typeoffer}, { :class => 'form-control' }) %>
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col-md-6">
            <div class="form-group">

              <%= f.label :nombre, 'Nombre' %>
              <%= f.text_field :nombre, :class =>'form-control'  %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :descripcion, 'Descripcion' %>
              <%= f.text_area :descripcion, :class =>'form-control'  %>
            </div>
          </div>

        </div>





        <div class="row">
          <div class="col-md-6">
            <div class="form-group">

              <%= f.label :precio1, 'Precio' %>
              <%= f.text_field :precio1, :class =>'form-control'  %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :precio2, 'Precio Revendedor' %>
              <%= f.text_field :precio2, :class =>'form-control' %>
            </div>
          </div>

        </div>




        <div class="row">


          <div class="col-md-4">
            <div class="form-group">

              <%= f.label :trucks, 'Camiones' %>
              <%= f.text_field :trucks, :class =>'form-control'  %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">

              <%= f.label :extra, 'Repuestos' %>
              <%= f.text_field :extra, :class =>'form-control'  %>
            </div>
          </div>



          <div class="col-md-4">
            <div class="form-group">

              <%= f.label :service, 'Servicios' %>
              <%= f.text_field :service, :class =>'form-control'  %>
            </div>
          </div>

        </div>

        <%= render partial: 'shared/botonera', locals:{ object: f, cancel_route: admin_offers_path } %>

    <% end %>

  </div>
</div>












