<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Precio Revendedor</th>
    <th>Acciones</th>

  </tr>
  </thead>
  <tbody>
  <% @planes_filter.each do |offer| %>

      <tr>
        <td><%= offer.nombre %></td>
        <td><%= number_to_currency offer.precio1,  precision: 0 %></td>
        <td><%= number_to_currency offer.precio2,  precision: 0 %></td>
        <td>
          <%= link_to 'Editar', edit_admin_offer_path(offer.id), :class=>'btn btn-info' %>
          <%= link_to 'Eliminar', {:controller => 'admin/offers', :action => 'destroy', :id => offer.id}, :data => {:confirm => 'Estas seguro de eliminar este elemento?'}, :method => 'DELETE',  :class=>'btn btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= render partial: "includes/paginator_admin" , locals: {object: @planes_filter}%>