
<div class="row">
	<div class="col-md-offset-1 col-md-5">
		<div class="form-group">
			<label>
				<%= f.check_box :negociable  %> Negociable
		 	</label>
		  	<br/>

		  	<label>
				<%= f.check_box :vigia  %> Vigia
			</label> <br/>

			<label>
				<%= f.check_box :frenosabs  %> Frenos ABS
			</label>
			<br/>
			<% if type != 5 %>
				<label>
					<%= f.check_box :aireAcondicionado  %> Aire Acondicionado
				</label>
				<br/>

			 	<label>
					<%= f.check_box :motorreparado  %> Motor Reparado
			 	</label> <br/>

				<label>
					<%= f.check_box :cajareparada  %> Caja Reparada
			 	</label> <br/>

