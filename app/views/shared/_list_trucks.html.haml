- if !@trucks.nil? && @trucks.size>0
  - @trucks.each do |truck|
    .col-md-3.wow.fadeInUp
      .products
        .product
          .product-image
            .image
              %a{:href => camion_path(truck.id, truck.link_rewrite)}
                = image_tag truck.picture1(:thumb ), size: "150x150"
          .product-info.text-left
            %h3.name
              %a{:href => "#"}= truck.nombre
            .description
              - if truck.state
                = "#{truck.modelo} | #{truck.state.name}"
            .product-price
              %span.price= number_to_currency( truck.price,  precision: 0, delimiter: '.')
          .cart.clearfix.animate-effect
            .action
              %ul.list-unstyled
                %li.add-cart-button.btn-group
                  %a.btn.btn-primary{:href => camion_path(truck.id, truck.link_rewrite)} Ver m√°s
- else
  .row
    .col-md-12
      %p
        No se encuentran resultados con la busqueda
= render partial: '/includes/paginator', locals: {object: @trucks}