<%= render partial: "/includes/messages_errors", locals: {object:  @user} %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Repuestos  <small><%=  @quantity.current_extras %></small>/<%= @quantity.total_extras %>
    </h1>

  </div>
</div>

<!-- /.row -->
<% if flash[:notice] %>

<%= render partial: 'shared/flashNoticeMessage' %>


<% end %>

<!-- /.row -->

<div class="row">
  <div class="col-md-12">
    <p>
      <% if  @user.cargar_planes > 0 && ( @quantity.total_extras - @quantity.current_extras > 0) %>
          <%= link_to 'Nuevo Repuesto', mirepuestosnew_path, :method=>'get', :class=>'btn  btn-primary' %>
      <% end %>
    </p>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">



    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Tipo</th>
          <th>Marca</th>
          <th>Acciones</th>
          <th style="display:none">Estado</th>
        </tr>
        </thead>
        <tbody>
        <% @extras.each do |extra| %>
            <tr>
              <td>
                <%= extra.name %>
              </td>
              <td>
                <%= number_to_currency( extra.price) %>
              </td>

              <td>
                <%=   extra.type_truck.name if extra.type_truck_id %>
              </td>

              <td>
                <%=  extra.brand_extra.name if extra.brand_extra_id %>
              </td>

              <td>
                <%= link_to 'Editar', mirepuestosedit_path(extra.id), :class=>'btn btn-info' %>
                <%= link_to 'Eliminar',mirepuestosdelete_path(extra.id), :method=>'delete', :data => {:confirm => 'Estas seguro de eliminar este elemento?'}, :class=>'btn btn-danger' %>
              </td>


              <td style="display: none">
                <% if extra.active == 1 %>


                    <%= link_to admin_updateState_path(extra.id,1,'extra'), :class=>'btn btn-success' do %>
                        <i class="fa fa-check"></i>
                    <% end %>


                <% else %>

                    <%= link_to admin_updateState_path(extra.id,0,'extra'), :class=>'btn btn-danger' do %>
                        <i class="fa fa-times"></i>
                    <% end %>


                <% end %>
              </td>


            </tr>
        <% end %>


        </tbody>



      </table>
    </div>

    <%= render partial: "includes/paginator_admin" , locals: {object: @extras}%>

  </div>
</div>



