
<!-- ============================================== HEADER : END ============================================== -->
<div class="breadcrumb">
  <div class="container">
    <div class="breadcrumb-inner">
      <ul class="list-inline list-unstyled">
        <li><a href="#">Home</a></li>
        <li><a href="#">Montallantas</a></li>
        <li class='active'>Nombre Almacen</li>
      </ul>
    </div><!-- /.breadcrumb-inner -->
  </div><!-- /.container -->
</div><!-- /.breadcrumb -->
<div class="body-content outer-top-xs">
<div class='container'>
<div class="homepage-container">
<div class='row single-product outer-bottom-sm '>




<div class='col-md-12'>
  <div class="row  wow fadeInUp">

    <%= render partial: 'includes/galeria', locals: {object: @service} %>

    <div class='col-sm-6 col-md-5 product-info-block'>
      <div class="product-info">
        <h1 class="name"><%= @service.name %></h1>
        <div class="stock-container info-container m-t-10">
          <div class="row footer color-bg">

            <div class="col-sm-12 contact-timing">

              <div class="module-body outer-top-xs">
                <div class="table-responsive">
                  <table class="table"><tbody>
                  <tr class="nymou"><td>Ubicación:</td><td class="pull-right"><%= @service.state.name if @service.state %> - <%= @service.city.name if @service.city %></td></tr>
                  <tr class="nymou"><td>Teléfono:</td><td class="pull-right"><%= @service.phone %></td></tr>
                  <tr class="nymou"><td>Horario:</td><td class="pull-right"><%= @service.horario %></td></tr>
                  <tr class="nymou"><td>Dirección:</td><td class="pull-right"><%= @service.address %></td></tr>
                  </tbody></table>
                </div><!-- /.table-responsive -->
              </div><!-- /.module-body -->
            </div>
          </div>
        </div><!-- /.row -->
      </div><!-- /.stock-container -->

      <div class="description-container m-t-20">
        <h3>Descripción</h3>
        <p>
          <%= @service.description %>
        </p>
      </div><!-- /.description-container -->

    </div><!-- /.product-info -->
  </div><!-- /.col-sm-5 -->

  <div class="col-md-12" style="border-top:1px solid #CCC; margin-top:30px; padding-top: 20px;">

    <div class="review-form">
      <div class="form-container">
        <form role="form" class="cnt-form">

          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="exampleInputName">Nombre <span class="astk">*</span></label>
                <input type="text" class="form-control txt e" id="nombre" placeholder="" name="nombre">
                <input type="hidden" class="form-control" id="exampleInputName" placeholder="" name="tipo" value="3">
                <input type="hidden" class="form-control " id="exampleInputName" placeholder="" name="item" value="<%= @service.id %>">
              </div><!-- /.form-group -->
              <div class="form-group">
                <label for="exampleInputSummary">Teléfono <span class="astk">*</span></label>
                <input type="text" class="form-control txt e" id="telefono" placeholder="" name="telefono">
              </div><!-- /.form-group -->
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="exampleInputReview">Mensaje <span class="astk">*</span></label>
                <textarea class="form-control txt txt-review e" id="mensaje" rows="4" placeholder="" name="mensaje"></textarea>
              </div><!-- /.form-group -->
            </div>
          </div><!-- /.row -->

          <div class="action text-right">
            <button class="btn btn-primary btn-upper" id="enviarconsulta">ENVIAR CONSULTA</button>
          </div><!-- /.action -->

        </form><!-- /.cnt-form -->
      </div><!-- /.form-container -->
    </div><!-- /.review-form -->

  </div>



</div><!-- /.col -->
</div><!-- /.row -->




<!-- ============================================== FEATURED PRODUCT ============================================== -->



</div><!-- /.logo-slider -->
<!-- ============================================== BRANDS CAROUSEL : END ============================================== -->		</div><!-- /.homepage-container -->
</div><!-- /.container -->
</div><!-- /.body-content -->






