<%= render partial: "/includes/messages_errors", locals: {object:  @user} %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Servicios   <small><%=  @quantity.current_services %></small>/<%= @quantity.total_services %>
    </h1>

  </div>
</div>

<!-- /.row -->
<% if flash[:notice] %>

    <div class="row">
      <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= flash[:notice] %>
        </div>
      </div>
    </div>


<% end %>

<!-- /.row -->

<div class="row">
  <div class="col-md-12">
    <p>
      <%  if  @user.cargar_planes > 0 && (@quantity.total_services- @quantity.current_services  > 0) %>
          <%= link_to 'Nuevo Servicio', miserviciosnew_path, :method=>'get', :class=>'btn  btn-primary' %>

      <% end %>
    </p>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">



    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
          <th>Nombre</th>

          <th>Tipo Servicio</th>

          <th>Contactos</th>
          <th>Acciones</th>
          <th style="display:none">Estado</th>
        </tr>
        </thead>
        <tbody>
        <% @servicios.each do |servicio| %>
            <tr>


              <td>
                <%= servicio.name %>
              </td>

              <td>
                <%= servicio.type_service.name  if servicio.type_service %>
              </td>



              <td>
                <% if  !servicio.messages.blank? %>
                    <% servicio.messages.each do |message|  %>
                        <%= message.nombre %>, <%= message.telefono %> <br/>
                        <%= message.mensaje %>
                        <hr/>

                    <% end %>
                <% end %>
              </td>


              <td>
                <%= link_to 'Editar', miserviciosedit_path(servicio.id), :class=>'btn btn-info' %>
                <%= link_to 'Eliminar',miserviciosdelete_path(servicio.id), :method=>'delete', :data => {:confirm => 'Estas seguro de eliminar este elemento?'}, :class=>'btn btn-danger' %>
              </td>




            </tr>
        <% end %>


        </tbody>



      </table>
    </div>

    <%= render partial: "includes/paginator_admin" , locals: {object: @servicios}%>

  </div>
</div>



