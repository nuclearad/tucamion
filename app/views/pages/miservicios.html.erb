<%= render partial: "/includes/messages_errors", locals: {object:  @user} %>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Servicios   <small><%=  @quantity.current_services %></small>/<%= @quantity.total_services %>
    </h1>

  </div>
</div>

<!-- /.row -->
<% if flash[:notice] %>

<%= render partial: 'shared/flashNoticeMessage' %>


<% end %>

<!-- /.row -->

<div class="row">
  <div class="col-md-12">
    <p>
      <%  if  @user.cargar_planes > 0 && (@quantity.total_services- @quantity.current_services  > 0) %>
          <%= link_to 'Nuevo Servicio', miserviciosnew_path, :method=>'get', :class=>'btn  btn-primary' %>

      <% end %>
    </p>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">



    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr>
          <th>Nombre</th>

          <th>Tipo Servicio</th>
          <th>Acciones</th>
          <th>Estado</th>
        </tr>
        </thead>
        <tbody>
        <% @servicios.each do |servicio| %>
            <tr>
              <td>
                <%= servicio.name %>
              </td>

              <td>
                <% if servicio.type_services %>
                  <% servicio.type_services.each do |type_ser| %>
                    <%= type_ser.name %>
                  <% end %>
                <% end %>
              </td>

              <td>
                <% if servicio.active == 1 %>
                   <%= link_to 'Editar', miserviciosedit_path(servicio.id), :class=>'btn btn-info' %>
                <% end %>
              </td>

              <td>

                <% if servicio.active == 1 %>
                   <%= link_to  "/estatus-update/service/#{servicio.id}", :class=>'btn btn-danger' do %>
                     <i class="fa fa-times"></i>
                   <% end %>
                <% elsif servicio.active == 0 %>
                   <%= link_to  "/estatus-update/service/#{servicio.id}", :class=>'btn btn-success' do %>
                     <i class="fa fa-check"></i>
                   <% end %>
                <% elsif servicio.active == 3 %>
                   Inactivo por el admin
                <% end %>

              </td>


            </tr>
        <% end %>


        </tbody>



      </table>
    </div>

    <%= render partial: "includes/paginator_admin" , locals: {object: @servicios}%>

  </div>
</div>



