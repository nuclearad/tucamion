.breadcrumb
.container
  .breadcrumb-inner
    %ul.list-inline.list-unstyled
      %li
        %a{:href => "/"} Home
      %li /
      %li.active Servicios
.body-content.outer-top-xs
  .container
    .row.outer-bottom-sm
      .col-md-12
        .search-result-container
          #myTabContent.tab-content
            #grid-container.tab-pane.active
              .category-product.inner-top-vs
                .row
                  - if !@services.nil?  && @services.count>0
                    - @services.each do |servicio|
                      .col-md-3.wow.fadeInUp
                        .products
                          .product
                            .product-image
                              .image
                                %a{:href => servicio_path(servicio.id, servicio.link_rewrite)}
                                  = image_tag servicio.picture1(:thumb )
                            .product-info.text-left
                              %h3.name
                                %a{:href => "#"}= servicio.name
                              .description
                                = servicio.city.name
                                | #{servicio.state.name}
                            .cart.clearfix.animate-effect
                              .action
                                %ul.list-unstyled
                                  %li.add-cart-button.btn-group
                                    %a.btn.btn-primary{:href => servicio_path(servicio.id, servicio.link_rewrite)} Ver m√°s
                  - else
                    %p
                      No se encuentran resultados con la busqueda
          = render partial: '/includes/paginator', locals:{object: @services}