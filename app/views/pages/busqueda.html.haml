.breadcrumb
.container
  .breadcrumb-inner
    %ul.list-inline.list-unstyled
      %li
        %a{:href => "/"} Home
      %li.active= params[:consulta]
.body-content.outer-top-xs
  .container
    .row.outer-bottom-sm
      .col-md-9
        .search-result-container
          #myTabContent.tab-content
            #grid-container.tab-pane.active
              .category-product.inner-top-vs
                - if @message.nil?
                  .row
                    %h2 CAMIONES
                    = render partial: 'shared/list_trucks'
                    %hr/
                  .row
                    %h2 Repuestos
                    = render partial: 'shared/list_extras'
                    %hr/
                  .row
                    %h2 Servicios
                    = render partial: 'shared/list_services'
                    %hr/
                - else
                  .row
                    %h2
                      = @message.to_s

