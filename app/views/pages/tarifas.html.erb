<div class="body-content outer-top-xs">
  <div class='container'>
    <div class="row product-comparison inner-bottom-sm">
      <h1 class="page-title text-center">NUESTRAS TARIFAS</h1>
      <div class="table-responsive">
        <table class="table table-bordered compare-table inner-top-vs">
          <tr>
            <th>PLANES</th>
            <% @planes.each do |plan| %>
             <td>
               <div class="product">
                 <div class="product-image">
                     <h3 style="font-size:50px;"><%= plan.nombre %></h3></div>
               </div>
             </td>
            <% end %>
          </tr>

          <tr>
            <th>PRECIO</th>
            <% @planes.each_with_index  do |plan, index| %>
              <td>
                <div class="product-price">
                  <span class="price" style="font-size:30px;">
                    <%= calculuarPrecio index %>
                  </span>
                </div>
              </td>
            <% end %>
          </tr>

          <tr>
            <th>DESCRIPCIÃ“N</th>
            <% @planes.each  do |plan| %>
              <td><p class="text"><%= plan.descripcion %></p></td>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <% @planes.each  do |plan| %>
              <td><center><%= link_to 'comprar', comprar_path(plan.id), class: 'btn btn-primary' %></center></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>