.body-content.outer-top-bd
  .container
    = render partial: 'includes/messages_errors', locals: {object: @cliente}
    %h1
      Cambio de contrase√±a
    %br
    .track-order-page.inner-bottom-sm
      .row
        .col-md-12
          = form_for @cliente, url:  process_change_session_path(@cliente), method: :post, class: "register-form outer-top-xs"   do |f|
            = f.hidden_field :token_pass, value: @cliente.token_pass
            .row  
              .form-group.col-md-4
                = f.label "Nuevo clave", class: "info-title"
                = f.password_field :clave, class: "form-control unicase-form-control text-input", required: true, value: ""
            .row
              .form-group.col-md-4
                = f.label "Confirmar password", class: "info-title"
                = f.password_field :clave_confirmation, class: "form-control unicase-form-control text-input", required: true, value: ""
            .row
              .form-group.col-md-4
                = f.submit "Enviar", class: "btn btn-primary"